{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],

    "baseUrl": "src/",
    "paths": {
      "@/*": ["./*"],
      "@/app/*": ["/app/*"],
      "@/styles/*": ["/styles/*"],
      "@/components/*": ["/app/components/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/components/tiggo-cross/CarTechSlider.jsx",
    "src/app/components/tiggo-cross/CarTechSlider-v1.jsx",
    "src/app/components/honors/CheryHonorsParallax-v1.jsx"
  ],
  "exclude": ["node_modules"]
}
